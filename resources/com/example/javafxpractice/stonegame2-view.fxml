<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxpractice.StoneGame2Controller">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="10.0" />
   </padding>
   <children>
      <Label fx:id="player" GridPane.rowIndex="7" />
      <TextField fx:id="num" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <Button mnemonicParsing="false" onAction="#getStone" text="決定" GridPane.columnIndex="2" GridPane.rowIndex="7">
         <GridPane.margin>
            <Insets left="25.0" />
         </GridPane.margin>
      </Button>
      <Label text="残りの数" GridPane.rowIndex="6" />
      <Label text="勝者：" GridPane.rowIndex="9" />
      <Label text="敗者：" GridPane.rowIndex="10" />
      <TextField fx:id="winner" GridPane.columnIndex="1" GridPane.rowIndex="9" />
      <TextField fx:id="looser" GridPane.columnIndex="1" GridPane.rowIndex="10" />
      <Label fx:id="stone" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <Label fx:id="warning" GridPane.columnIndex="2" GridPane.rowIndex="8" />
      <Label fx:id="symbol" GridPane.rowIndex="5" />

      <Label text="石の総数を決めてください(10~100)" />
      <Label text="石をとれる数を決めてください" GridPane.rowIndex="1" />
      <Label text="メンバーを決めてください(,で区切ってください)" GridPane.rowIndex="3" />
      <Label text="石の記号を決めてください" GridPane.rowIndex="4" />

      <TextField fx:id="stoneNum" GridPane.columnIndex="1" />
      <TextField fx:id="limit" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="member" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="symbolShape" GridPane.columnIndex="1" GridPane.rowIndex="4" />

      <Button mnemonicParsing="false" onAction="#stoneInit" text="決定" GridPane.columnIndex="2">
         <GridPane.margin>
            <Insets left="25.0" />
         </GridPane.margin></Button>
      <Button mnemonicParsing="false"  text="決定" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="25.0" />
         </GridPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#memberInput" text="決定" GridPane.columnIndex="2" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets left="25.0" />
         </GridPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#symbolInput" text="決定" GridPane.columnIndex="2" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets left="25.0" />
         </GridPane.margin>
      </Button>
   </children>
</GridPane>
